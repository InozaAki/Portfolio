---
import { Image } from "astro:assets";
---

<div class="welcome-container flex justify-center items-center" id="home">
    <div class="welcome-content grid grid-cols-1 md:grid-cols-2 gap-4 p-4 max-w-4xl w-full h-screen items-center">
        <div class="flex flex-col items-center justify-center text-center md:text-left">
            <h1 class="text-2xl md:text-4xl font-bold">Axel Espinosa - <span class="text-indigo-400">FullStack Developer</span></h1>
            <p class="text-lg mt-4">Make yourself comfy üçµ‚ú®</p>
            <a class="github-link flex gap-2 p-2" href="https://github.com/InozaAki">
                <Image src="/images/github.svg" alt="Github Icon" width={25} height={25} />InozaAki
            </a>
            <div class="mt-3 flex flex-col md:flex-row items-center gap-3">
                <a class="btn" href="#contact">Contact me :)</a>
            </div>
        </div>
        <div class="flex justify-center">
            <Image src="/images/home.svg" alt="Welcome" width={400} height={400} class="w-full max-w-[300px] md:max-w-[500px] h-auto object-contain" />
        </div>
    </div>
</div>

<style>
    .welcome-container {
        min-height: 100vh;
        color: var(--color-text);
    }
    .name-dev {
        font-size: 1.75rem; 
    }
    .name-dev span {
        color: var(--color-subtle);
        text-decoration: none;
    }
    .btn {
        background-color: var(--color-overlay);
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        text-decoration: none;
    }
    .btn:hover {
        background-color: var(--color-highlight-light);
        font-weight: bold;
        transform: translateY(-2px);
        transition: all 0.2s ease-in-out;
    }
    .github-link {
        color: var(--color-subtle);
        text-decoration: underline;
        text-decoration-color: var(--color-highlight-light);
    }
    .github-link:hover {
        font-weight: bold;
        transform: translateY(-2px);
        transition: all 0.2s ease-in-out;
    }
</style>